<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>User Information</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        color: #fff;
        background: #003566;
        padding: 20px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
      }
      th,
      td {
        border: 1px solid #fff;
        padding: 10px;
      }
      th {
        background: #ffcc5b;
        color: #000022;
      }
    </style>
  </head>
  <body>
    <h1>User Information</h1>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Number</th>
          <th>Age</th>
          <th>Biodata</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(function(user){ %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.number %></td>
          <td><%= user.age %></td>
          <td><%= user.biodata %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>

    <a href="/">Add another User</a>
  </body>
</html>
